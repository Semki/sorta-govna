<div id="shits-list">
  
<h1>Список концептов</h1>

<table width="100%">
  <tr>
    <th>Название</th>
    <th>Описание</th>
    <th></th>
    <th></th>
  </tr>

<% @shits.each do |shit| %>
 <tr class="trow">
    <td><%= shit.name %></td>
    <td><%= shit.description.to_s.truncate(70) %>
    <td>
      <% if shit.few_synonyms? %>
      <%=  few_synonyms_span %>
      <% end %>
    </td>
    <td class="hideable-images-td">
      <%= link_to image_tag("show_icon.png", :border=>0), shit %>
      <%= link_to image_tag("edit_icon.png", :border=>0), edit_shit_path(shit) %>
      <%= link_to image_tag("delete_icon.png", :border=>0), shit, :confirm => 'Уверен?', :method => :delete %>
    </td>
  </tr>
<% end %>
</table>
<br />
<%= paginate @shits %>
<br />
<%= link_to t(:shit_create), new_shit_path %>

</div>