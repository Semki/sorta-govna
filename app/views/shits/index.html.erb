<div id="shits-list">
  
	
	<script type="text/javascript">
  $(function() {
		$( ".trow").hover(function(){
										$(".hideableClass", this).css("display", "block");},
									function(){
										$(".hideableClass", this).css("display", "none");}
									);
		$(".hideableClass").css("display", "none");	
	});
	</script>
<h1>Список концептов</h1>

<table width="100%">
  <tr>
    <th>Название</th>
    <th>Описание</th>
    <th>Есть синонимы?</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @shits.each do |shit| %>
 <tr class="trow">
    <td><%= shit.name %></td>
    <td><%= shit.description.to_s.truncate(70) %>
    <td>
      <span>
      <%= '✔' unless shit.synonyms.empty? %>
      <%= '✘' if shit.synonyms.empty? %>
      </span>
    </td>
    <td class="hideableClass"><%= link_to image_tag("show_icon.png", :border=>0), shit %></td>
    <td class="hideableClass"><%= link_to image_tag("edit_icon.png", :border=>0), edit_shit_path(shit) %></td>
    <td class="hideableClass"><%= link_to image_tag("delete_icon.png", :border=>0), shit, :confirm => 'Уверен?', :method => :delete %></td>
  </tr>
<% end %>

</table>

<br />
<%= paginate @shits %>
<%= link_to image_tag("add_icon.png", :border=>0), new_shit_path %>
</div>