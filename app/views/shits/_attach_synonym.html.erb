<div id="synonym-from-concept-div">
  <h3>Создать синоним</h3>
  <%= form_for :synonym, :url => synonyms_path, :remote => true do |f| %>
    <%= f.hidden_field :shit_id, :value => @shit.id %>
    <p>Название</p>
    <%= f.text_field :name, :class => 'synonym-name' %>
	<p>Релевантность</p>
    <%= f.select :relevance, (1..4).to_a.reverse %>
    <br />
    <%= f.submit 'Создать' %>
    <span id='synonym-notice'></span>
  <% end %>
</div>
