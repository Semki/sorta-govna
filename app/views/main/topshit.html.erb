<h1><%= t(:top_10_shits)%></h1>

<table width="50%" border="solid" >
  <tr>
    <th><%= t(:name) %></th>
    <th><%= t(:total) %></th>
    <th><%= t(:shit_it_more) %></th>
  </tr>
<% @topshits.each do |shit| %>
 
  <tr cols='2'>
      <th><%= shit.name.mb_chars.capitalize %></th>
      <th><%= shit.total %></th>
      <th><%= link_to image_tag("turd.jpg", :border=>0), :controller => "main", :action => 'shit_by_id', :remote => true, :id => shit.id %></th>
  </tr>

 
<% end %>
</table>

