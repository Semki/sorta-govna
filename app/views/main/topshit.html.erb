<h1><%= t(:top_10_shits)%></h1>

<table class="top_table">
  <tr>
    <th><%= t(:name) %></th>
    <th><%= t(:total) %></th>
    <th class="shit_it_cell"><%= t(:shit_it_more) %></th>
  </tr>
<% @topshits.each do |shit| %>
 
  <tr cols='2'>
      <td><%= shit.name.mb_chars.capitalize %></td>
      <td><%= shit.total %></td>
      <td class="shit_it_cell"><%= link_to image_tag("turd.jpg", :border=>0), :controller => "main", :action => 'shit_by_id', :remote => true, :id => shit.id %></td>
  </tr>

 
<% end %>
</table>

